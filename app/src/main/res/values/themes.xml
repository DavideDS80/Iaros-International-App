<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IarosInternational" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.IarosInternational.App.BottomNavigationView</item>
    </style>

    <style name="Widget.IarosInternational.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/Theme.IarosInternational.App.BottomNavigationView</item>
    </style>

    <style name="Theme.IarosInternational.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/blu_iaros</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="postSplashScreenTheme">@style/Theme.IarosInternational</item>
    </style>

    <style name="Theme.IarosInternational.Text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Theme.IarosInternational.Text.title_page">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Theme.IarosInternational.Text.title_home"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name="Theme.IarosInternational.Text.title_contacts"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name="Theme.IarosInternational.Text.title_courses"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name="Theme.IarosInternational.Text.title_mission"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name="Theme.IarosInternational.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BottomNavigation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BottomNavigation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>